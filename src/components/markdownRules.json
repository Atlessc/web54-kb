{
    "Syntax-Rules": [
        {
            "character": "&",
            "description": "create a header with a number from 1 to 6 to indicate the level of the header",
            "Examples": [
                {
                    "Example1": "Example 1: &1 Welcome to my blog"
                },
                {
                    "Example2": "Example 2: &3 How to use the syntax system"
                }
            ]
        },
        {
            "character": "^",
            "description": "creates a footer",
            "Examples": [
                {
                    "Example1": "Example 1: ^This is a footer"
                },
                {
                    "Example2": "Example 2: ^Contact me at example@example.com"
                }
            ]
        },
        {
            "character": "#",
            "description": "create an ordered list with commas to separate the items and parentheses to enclose the sub-items",
            "Examples": [
                {
                    "Example1": "Example 1: #First, second, third"
                },
                {
                    "Example2": "Example 2: #Step 1, Step 2 (Sub-step 1, Sub-step 2), Step 3"
                }
            ]
        },
        {
            "character": "*",
            "description": "create an unordered list with commas to separate the items and parentheses to enclose the sub-items",
            "Examples": [
                {
                    "Example1": "Example 1: *Apple, banana, orange"
                },
                {
                    "Example2": "Example 2: *Red, green (light green, dark green), blue"
                }
            ]
        },
        {
            "character": "@",
            "description": "insert an image from a URL or inside the project with an optional alt text in brackets",
            "Examples": [
                {
                    "Example1": "Example 1: @https://example.com/image.jpg [This is an image]"
                },
                {
                    "Example2": "Example 2: @/images/logo.png [This is a logo]"
                }
            ]
        },
        {
            "character": "$",
            "description": "embed a link in text with the link text in brackets and the link URL in parentheses",
            "Examples": [
                {
                    "Example1": "Example 1: $(This is a link)[https://www.example.com]"
                },
                {
                    "Example2": "Example 2: $(Click here)[/article/WD000001]"
                }
            ]
        },
        {
            "character": "%",
            "description": "create a table with semicolons to separate the rows and commas to separate the cells and an asterisk before the header row",
            "Examples": [
                {
                    "Example1": "Example 1: %*Name,Age,City; Alice,20,London; Bob,25,New York; Charlie,30,Paris"
                },
                {
                    "Example2": "Example 2: %*Product,Price,Quantity; Laptop,$500,2; Phone,$300,3; Tablet,$400,1"
                }
            ]
        },
        {
            "character": "**",
            "description": "make text bold by enclosing it with double asterisks",
            "Examples": [
                {
                    "Example1": "Example 1: **This is bold**"
                },
                {
                    "Example2": "Example 2: This is **important**"
                }
            ]
        },
        {
            "character": "/",
            "description": "make text italic by enclosing it with slashes",
            "Examples": [
                {
                    "Example1": "Example 1: /This is italic/"
                },
                {
                    "Example2": "Example 2: This is /emphasized/"
                }
            ]
        },
        {
            "character": "``",
            "description": "insert code or a string by enclosing it with backticks",
            "Examples": [
                {
                    "Example1": "Example 1: `console.log('Hello world')`"
                },
                {
                    "Example2": "Example 2: This is a `string`"
                }
            ]
        },

        {
            "character": ">",
            "description": "create a blockquote by preceding it with a greater than sign",
            "Examples": [
                {
                    "Example1": "Example 1: >This is a quote"
                },
                {
                    "Example2": "Example 2: >Be the change you want to see in the world"
                }
            ]
        },
        {
            "character": "~~",
            "description": "strike through text by enclosing it with double tildes",
            "Examples": [
                {
                    "Example1": "Example 1: ~~This is strikethrough~~"
                },
                {
                    "Example2": "Example 2: This is ~~wrong~~ right"
                }
            ]
        },
                {
            "character": "{}",
            "description": "add a heading ID by enclosing it with curly braces before the heading text",
            "Examples": [
                {
                    "Example1": "Example 1: {introduction} This is an introduction"
                },
                {
                    "Example2": "Example 2: {summary} This is a summary"
                }
            ]
        },
        {
            "character": "[]",
            "description": "create a task list by enclosing each item with square brackets and adding an optional check mark inside them to indicate completion",
            "Examples": [
                {
                    "Example1": "Example 1: [x] task 1, [] task 2, [x] task 3"
                },
                {
                    "Example2": "Example 2: [ ] buy groceries, [x] pay bills, [ ] do laundry"
                }
            ]
        }
    ]
}